<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768"
            prefWidth="1280" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bgconsole.platform.ui.PlatformWindowController">
    <top>

        <MenuBar fx:id="menuBar">
            <Menu mnemonicParsing="false" text="File">
                <!--                        <MenuItem fx:id="newMenu" mnemonicParsing="false" onAction="#newLocation" text="New"/>-->
                <!--                        <MenuItem fx:id="openMenu" mnemonicParsing="false" onAction="#openProject" text="Open..."/>-->
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit"/>
            </Menu>
            <Menu text="Project" fx:id="projectMenu"/>
            <Menu text="Perspective" fx:id="perspectiveMenu"/>
            <Menu text="Help">
                <MenuItem mnemonicParsing="false" onAction="#help" text="Help"/>
                <MenuItem mnemonicParsing="false" onAction="#about" text="About"/>
            </Menu>
        </MenuBar>

    </top>
    <center>
        <StackPane fx:id="appContent" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
    </center>
</BorderPane>
