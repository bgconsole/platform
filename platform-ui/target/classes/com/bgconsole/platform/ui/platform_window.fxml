<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768"
            prefWidth="1280" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bgconsole.platform.ui.PlatformWindowController">
    <top>

        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <!--                        <MenuItem fx:id="newMenu" mnemonicParsing="false" onAction="#newLocation" text="New"/>-->
                        <!--                        <MenuItem fx:id="openMenu" mnemonicParsing="false" onAction="#openProject" text="Open..."/>-->
                        <MenuItem fx:id="profileManagerMenu" onAction="#openProfileManager" text="Profile manager..."/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="quitMenu" mnemonicParsing="false" onAction="#quit" text="Quit"/>
                    </items>
                </Menu>
                <Menu text="Workspace">
                    <items>
                        <MenuItem onAction="#newWorkspace" text="New..."/>
                        <MenuItem onAction="#openWorkspace" text="Open..."/>
                        <MenuItem onAction="#removeWorkspace" text="Remove"/>
                    </items>
                </Menu>
                <Menu text="Project">
                    <items>
                        <MenuItem onAction="#createProject" text="Create..."/>
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#help" text="Help"/>
                        <MenuItem mnemonicParsing="false" onAction="#about" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

    </top>
    <center>
        <StackPane fx:id="appContent" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
    </center>
</BorderPane>
