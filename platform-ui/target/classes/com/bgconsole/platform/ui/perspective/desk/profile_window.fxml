<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bgconsole.platform.ui.perspective.desk.profile.ProfileWindowController">
   <center>
       <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <ListView fx:id="profileList" prefHeight="200.0" prefWidth="200.0"/>
       </StackPane>
   </center>
   <top>
       <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <Button mnemonicParsing="false" text="New" onAction="#add"/>
           <Button mnemonicParsing="false" text="Update" onAction="#update"/>
           <Button mnemonicParsing="false" text="Delete" onAction="#delete"/>
       </ToolBar>
   </top>
</BorderPane>
